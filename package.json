{
  "name": "@artwork/simply-state",
  "version": "1.0.0",
  "description": "A simple state management library using immer",
  "keywords": [
    "react",
    "flux",
    "redux",
    "state",
    "immutable",
    "immer",
    "simply",
    "simply-state"
  ],
  "repository": "github:ArtworkCompany/simply-state",
  "license": "MIT",
  "author": "Samir ZEKRI <s.zekri@artworkcompany.fr> (https://github.com/ArtworkCompany)",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "format": "prettier --write {*,src/**/*,test/**/*,.vscode/**/*}.{ts,json,yml,yaml}",
    "lint": "eslint --fix --cache .",
    "prepare": "husky install",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-c8": "^0.31.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.3"
  },
  "dependencies": {
    "immer": "^10.0.2"
  }
}
